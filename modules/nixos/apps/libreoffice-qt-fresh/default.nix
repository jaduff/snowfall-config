{
  options,
  config,
  lib,
  pkgs,
  namespace,
  ...
}:
with lib;
with lib.${namespace}; let
  cfg = config.${namespace}.apps.libreoffice-qt-fresh;
in {
  options.${namespace}.apps.libreoffice-qt-fresh = with types; {
    enable = mkBoolOpt false "Whether or not to enable Protontricks.";
  };

  config = mkIf cfg.enable {
    environment.systemPackages = with pkgs; [libreoffice-qt-fresh];
  };
}
